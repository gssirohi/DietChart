<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/card_content_background"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nutients_header"
                style="@style/Text.Light.Large.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:hint="Nutrients per serving(10 gms)"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                        <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                    android:id="@+id/til_food_calory"
                    android:layout_width="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

        <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Energy(in calory)"
                        android:inputType="numberDecimal" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_carbs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Carbohydrates"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_fat"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fat"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_protine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="protine"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_fiber"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fiber"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/card_content_background"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vitamins_heading"
                style="@style/Text.Light.Large.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:hint="Vitamins per serving(10 gms)"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_vitaminA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Vitamin A"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_vitaminB12"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Vitamin B-12"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_vitaminC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Vitamin C"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_vitaminD"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Vitamin D"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_vitaminE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Vitamin E"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_vitaminK"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Vitamin K"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/card_content_background"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_minerals_heading"
                style="@style/Text.Light.Large.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:hint="Minerals per serving(10 gms)"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_calcium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Calcium"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_sodium"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sodium"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_magnisium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Magnissium"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_potassium"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Potassium"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_zinc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Zinc"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_iron"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Iron"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/card_content_background"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_other_heading"
                style="@style/Text.Light.Large.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:hint="Other contents per serving(10 gms)"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_sugar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sugar"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
                        android:id="@+id/til_food_cholestrol"
                        android:layout_width="0dp"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
    style="@style/Text.Light.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cholestrol"
                            android:inputType="numberDecimal" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
