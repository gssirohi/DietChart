<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="@color/card_content_background"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_serving_info_header"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            style="@style/Text.Light.VeryLarge.Bold"
            android:text="Serving Information"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    >
            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_food_serving">
        <android.support.design.widget.TextInputEditText

                style="@style/Text.Light.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right"
            android:drawableRight="@drawable/ic_keyboard_arrow_right"
            android:drawableTint="@color/colorAccent"
            android:hint="Food Serving"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:id="@+id/b_create_serving"
        android:text="Create New Serving"
        android:drawableLeft="@drawable/ic_add"
        style="@style/AppButtonStyleAccent"
        >

    </Button>
            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/til_food_unit">
        <android.support.design.widget.TextInputEditText
                style="@style/Text.Light.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right"
            android:drawableRight="@drawable/ic_keyboard_arrow_right"
            android:drawableTint="@color/colorAccent"
            android:hint="Food Content Unit"/>
    </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout             android:theme="@style/Text.Light.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_food_content">
        <android.support.design.widget.TextInputEditText
            style="@style/Text.Light.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content per serving"
            android:inputType="numberDecimal"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>