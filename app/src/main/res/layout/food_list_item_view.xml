<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:padding="4dp"
    android:background="@color/meal_item_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:id="@+id/cb_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_food"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/app_icon"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Meal Name"
        style="@style/Text.Light.Large.Bold"
        android:id="@+id/tv_food_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_food_type"
        android:hint="Meal type"
        android:layout_marginTop="4dp"
        style="@style/Text.Light"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/divider">
    </View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        >
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="1"
            style="@style/Text.Light.VeryLarge.Bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/highlighted_text_color"
            android:id="@+id/et_serving"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Bowl"
            android:layout_gravity="end"
            android:gravity="center"
            android:id="@+id/tv_serving_label"
            style="@style/Text.Light"/>
    </LinearLayout>
</LinearLayout>
