<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/card_backgroud_primary"
    android:padding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_routine_bg"
        android:background="@drawable/bg_card_8"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_routine_name"
                android:layout_gravity="center_vertical"
                style="@style/Text.Light.VeryLarge.Bold"
                android:textColor="@color/card_heading_text_color"
                android:text="Breakfast"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_routine_desc"
                android:layout_gravity="center_vertical"
                style="@style/Text.Light"
                android:textColor="@color/card_heading_text_color"
                android:text="kick start your day with a healthy breakfast"/>
        </LinearLayout>
            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_sweep"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_meal_container"
        android:background="@color/card_content_background"
        android:orientation="vertical">
        <include
            layout="@layout/meal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></include>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/ll_add_meal"
            android:background="@color/card_content_background"
            android:layout_height="150dp">
            <Button
                android:id="@+id/b_add_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_input_add"
                android:text="Add Meal"
                style="@style/AppButtonStyleAccent"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>